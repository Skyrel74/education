@model Cenema.Models.Domain.Hall[]
@using Cenema.Models

@section SubNav
{
    @Html.Partial("SubNavigation", SubNavigationMenu.Halls)
}

<h2 class="admin-heading">Halls</h2>

<div class="admin-add-btn">
    @Html.ActionLink("Add hall", "AddHall", "Admin", null,
    new { @class="btn btn-success btn-block"})
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Places</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hall in Model)
        {
            <tr>
                <td>@hall.Name</td>
                <td>@hall.Places</td>
                <td class="col-lg-2">
                    @Html.ActionLink("Edit", "EditHall", "Admin", new { hallId = hall.Id },
                   new { @class = "btn btn-primary btn-block bluebtn" })
                    @Html.ActionLink("Delete", "RemoveHall", "Admin",
                       new { hallId = hall.Id }, new { @class = "btn btn-primary btn-block delete" })
                </td>
            </tr>
        }
    </tbody>
</table>